{
  "name": "@pkmn/spreads",
  "version": "0.1.0",
  "description": "Library for manipulating and displaying Pok√©mon stats, spreads, and ranges",
  "repository": "github:pkmn/EPOke",
  "license": "MIT",
  "sideEffects": false,
  "main": "build/index.js",
  "module": "build/index.mjs",
  "types": "build/index.d.ts",
  "files": ["build"],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@pkmn/types": "^3.0.0"
  },
  "scripts": {
    "lint": "eslint --cache src --ext ts",
    "fix": "eslint --fix src --ext ts",
    "compile": "tsc -p .",
    "build": "npm run compile && tsup src/index.ts",
    "test": "jest",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "posttest": "npm run lint"
  },
  "tsup": {
    "outDir": "build",
    "format": ["cjs", "esm"],
    "sourcemap": true,
    "dts": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["node_modules/", "build/"]
  }
}
