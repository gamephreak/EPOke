{
  "name": "@pkmn/epoke",
  "version": "0.0.1",
  "description": "Enhanced client representation of a Pok√©mon battle",
  "repository": "github:pkmn/EPOke",
  "license": "MIT",
  "sideEffects": false,
  "main": "build/index.js",
  "module": "build/index.mjs",
  "types": "build/index.d.ts",
  "files": ["build"],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@pkmn/client": "^0.6.0",
    "@pkmn/data": "^0.7.0",
    "@pkmn/protocol": "^0.6.0",
    "@pkmn/spreads": "^0.1.0"
  },
  "scripts": {
    "lint": "eslint --cache src --ext ts",
    "fix": "eslint --fix src --ext ts",
    "compile": "tsc -p .",
    "build": "npm run compile && tsup src/index.ts",
    "test": "jest",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "posttest": "npm run lint"
  },
  "tsup": {
    "outDir": "build",
    "format": ["cjs", "esm"],
    "sourcemap": true,
    "dts": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["node_modules/", "build/"]
  },
  "eslintConfig": {
    "extends": "@pkmn",
    "ignorePatterns": ["node_modules/", "build/"],
    "overrides": [{
      "files": ["src/index.ts"],
      "rules": {
        "@typescript-eslint/no-shadow": "off"
      }
    }]
  }
}
